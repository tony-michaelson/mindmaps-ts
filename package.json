{
  "name": "mindmaps-ts",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern TypeScript mindmapping library with 3D nodes, advanced layout algorithms, and smooth interactions built on Konva.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "build:lib": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "build:demo": "vite build --config vite.demo.config.ts",
    "dev": "vite",
    "lint": "eslint src/**/*.ts && npm run typecheck",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run test:e2e && npm run build:lib"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tony-michaelson/mindmaps-ts.git"
  },
  "keywords": [
    "mindmap",
    "mindmapping",
    "visualization",
    "typescript",
    "konva",
    "canvas",
    "3d-nodes",
    "layout-algorithms",
    "drag-drop",
    "tree-layout",
    "interactive"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Anthony Ian Michaelson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tony-michaelson/mindmaps-ts/issues"
  },
  "homepage": "https://github.com/tony-michaelson/mindmaps-ts#readme",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.51.0",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "playwright": "^1.51.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^6.2.2"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "konva": "^9.3.19",
    "lodash": "^4.17.21",
    "uuid": "^11.1.0"
  }
}
